@charset "UTF-8";

/*mypage*/
#content_mypage {
	width: 100%;
	padding: 60px 20px 0;
	height: fit-content;
}

#mypage_header {
	margin-bottom: 44px;
	display: flex;
}

#mypage_header_profileImage {
	margin-right: 30px;
	width: 291px;
}

#mypage_header_profileImage_image {
	height: 150px;
	width: 150px;
	border-radius: 50%;
	background-size: 150px;
	background-repeat: no-repeat;
	margin-left: auto;
	margin-right: auto;
}

#mypage_header_profileInfo_top {
	margin-bottom: 20px;
	display: flex;
	align-items: center;
}

#mypage_h1 {
	color: #262626;
	font-weight: 300 !important;
	font-size: 25px;
	line-height: 32px;
	margin-right: 20px;
}

.mypage_button {
	background-color: transparent;
	border: 1px solid #dbdbdb;
	color: #262626;
	border-radius: 4px;
	cursor: pointer;
	font-weight: 600;
	padding: 5px 9px;
}

.glyphicon-cog {
	font-size: 25px;
}

#mypage_header_profileInfo_middle {
	display: flex;
	margin-bottom: 20px;
}

.mypage_span {
	font-size: 16px;
	margin-right: 40px;
}

#mypage_header_profileInfo_bottom {
	display: grid;
}

#mypage_content {
	display: grid;
}

.mypage_content_post {
	list-style: none;
	margin-bottom: 20px;
}

.mypage_content_postImages {
	position: relative;
	overflow: hidden;
	height: 300px;
}

.mypage_content_postImage {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
}

.overlay {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	height: 245px;
	width: 100%;
	opacity: 0;
	transition: .5s ease;
	background-color: #595959;
}

.mypage_content_postImages:hover .overlay {
	opacity: 0.7;
}

.mypage_content_postImageText {
	color: white;
	font-size: 15px;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-ms-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	text-align: center;
}

