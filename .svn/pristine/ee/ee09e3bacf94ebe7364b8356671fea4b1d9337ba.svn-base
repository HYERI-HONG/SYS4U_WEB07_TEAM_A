@charset "UTF-8";

body, html {
	margin: 0;
	padding: 0;
	height: 100%;
}

 .loginVAl {
        color: white;
}

.bgimg {
	border: 0;
	padding: 0;
	background-image: url(../img/common/background.jpg);
	min-height: 100%;
	background-position: center;
	background-size: cover;
}

.page {
	height:650px;
	display: flex;
	justify-content: center;
	align-items: center;
}

.square_btn {
    display: inline-block;
    padding: 0.3em 1em;
    text-decoration: none;
    color: #af1576;
    border: solid 2px #af1576;
    border-radius: 3px;
    transition: .4s;
}

.square_btn:hover {
    background: #af1576;
    color: white;
}